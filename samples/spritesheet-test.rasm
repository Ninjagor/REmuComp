_START
  INITDISPLAY

  ; Sprites (8x8) defined as byte arrays in memory

  ; Roof left
  LDS R1  [0x18 0x3C 0x7E 0xFF 0xFF 0x00 0x00 0x00] 0xE010
  ; Roof center
  LDS R2  [0x18 0x3C 0x7E 0xFF 0xFF 0x00 0x00 0x00] 0xE020
  ; Roof right
  LDS R3  [0x18 0x3C 0x7E 0xFF 0xFF 0x00 0x00 0x00] 0xE030

  ; Wall left
  LDS R4  [0xFF 0x81 0x81 0x81 0x81 0x81 0x81 0xFF] 0xE040
  ; Wall center (door)
  LDS R5  [0xFF 0x81 0xBD 0xBD 0xBD 0x81 0x81 0xFF] 0xE050
  ; Wall right
  LDS R6  [0xFF 0x81 0x81 0x81 0x81 0x81 0x81 0xFF] 0xE060

  ; Ground
  LDS R7  [0x00 0x00 0x00 0xFF 0xFF 0xFF 0x00 0x00] 0xE070

  ; Coordinates for roof (y=2), walls (y=10), ground (y=18)
  MOVI R10, 10  ; x start

  ; Draw roof (3 sprites, x spaced by 8 pixels)
  SPRB R1, R10, 2
  SPRB R2, R10+8, 2
  SPRB R3, R10+16, 2

  ; Draw walls (3 sprites)
  SPRB R4, R10, 10
  SPRB R5, R10+8, 10
  SPRB R6, R10+16, 10

  ; Draw ground (single sprite stretched for simplicity, tiled 3 times)
  SPRB R7, R10, 18
  SPRB R7, R10+8, 18
  SPRB R7, R10+16, 18

  DRAW

_LOOP
  JMP _LOOP
